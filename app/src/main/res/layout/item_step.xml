<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mc100_search_list_item_1"
    android:id="@+id/ll_step_item">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="start|center"
            android:text="变温前"/>
        <EditText
            android:id="@+id/et_step_temp_before"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@android:drawable/edit_text"
            android:ems="10"
            android:imeOptions="flagNoExtractUi"
            android:inputType="numberDecimal"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="start|center"
            android:text="变温后"/>
        <EditText
            android:id="@+id/et_step_temp_after"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@android:drawable/edit_text"
            android:ems="10"
            android:imeOptions="flagNoExtractUi"
            android:inputType="numberDecimal"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="start|center"
            android:text="延时"/>
        <EditText
            android:id="@+id/et_step_delay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@android:drawable/edit_text"
            android:ems="10"
            android:imeOptions="flagNoExtractUi"
            android:inputType="numberDecimal"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="start|center"
            android:text="加速度"/>
        <EditText
            android:id="@+id/et_step_change_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@android:drawable/edit_text"
            android:ems="10"
            android:imeOptions="flagNoExtractUi"
            android:inputType="numberDecimal"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="start|center"
            android:text="采样"/>
        <!--<EditText-->
            <!--android:id="@+id/et_step_read_enable"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@android:drawable/edit_text"-->
            <!--android:ems="10"-->
            <!--android:imeOptions="flagNoExtractUi"-->
            <!--android:inputType="numberDecimal"-->
            <!--android:singleLine="true" />-->
        <Switch
            android:id="@+id/sw_step_read_enable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:showText="true"
            android:textColor="#808080"
            android:textOff="关"
            android:textOn="开"
            android:textSize="16pt" />

        <!--android:thumb="@drawable/sw_mc100_setting_thumb_selector"-->
        <!--android:track="@drawable/sw_mc100_setting_track_selector"-->
    </LinearLayout>
</LinearLayout>
