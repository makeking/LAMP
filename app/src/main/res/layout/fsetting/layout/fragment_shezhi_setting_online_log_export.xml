<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="10dp"
    android:paddingRight="30dp"
    android:paddingBottom="10dp"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/lamp_setting_fragment_label" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50px"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="日志导出"
            android:textColor="#4d4d4d"
            android:textSize="8pt" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingVertical="20px"
        android:paddingHorizontal="50px"
        android:layout_gravity="center"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_log_online"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20px"/>

        <Button
            android:id="@+id/bt_export_log"
            android:layout_width="155px"
            android:layout_height="61px"
            android:layout_gravity="center"
            android:background="@drawable/bt_lamp_button_selector"
            android:enabled="true"
            android:text="导出"
            android:textSize="10pt"
            android:textColor="@color/bt_lamp_button_text_color"/>
    </LinearLayout>
</LinearLayout>
