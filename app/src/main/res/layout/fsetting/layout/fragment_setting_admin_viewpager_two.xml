<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                style="@style/style_lamp_setting_button"
                android:id="@+id/setting_bt_usermanage"
                android:drawableTop="@drawable/bt_lamp_setting_usemanage_selector"
                android:text="用户管理"
                android:visibility="gone"/>

            <Button
                style="@style/style_lamp_setting_button"
                android:id="@+id/setting_bt_logexport"
                android:drawableTop="@drawable/bt_lamp_setting_logexport_selector"
                android:text="日志导出"
                android:visibility="gone"/>

            <Button
                style="@style/style_lamp_setting_button"
                android:id="@+id/setting_bt_barcode"
                android:drawableTop="@drawable/bt_lamp_setting_barcode_selector"
                android:text="二维码生成" />

            <Button
                style="@style/style_lamp_setting_button"
                android:id="@+id/setting_bt_eeprom"
                android:drawableTop="@drawable/bt_lamp_setting_deviceinfo_selector"
                android:text="EEPROM配置" />

            <Button
                style="@style/style_lamp_setting_button"
                android:id="@+id/setting_bt_desktop"
                android:drawableTop="@drawable/bt_lamp_setting_desktop_selector"
                android:text="返回桌面" />

            <Button
                style="@style/style_lamp_setting_button"
                android:id="@+id/setting_bt_switch_pc"
                android:drawableTop="@drawable/bt_lamp_setting_switchpc_selector"
                android:text="切换PC"
                android:visibility="gone"/>

            <Button
                style="@style/style_lamp_setting_button"
                android:id="@+id/setting_bt_killprogram"
                android:drawableTop="@drawable/bt_lamp_setting_kill_selector"
                android:text="关闭程序" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>



            <Button
                style="@style/style_lamp_setting_button"
                android:drawableTop="@drawable/bt_lamp_setting_deviceinfo_selector"
                android:text="remount"
                android:visibility="invisible"/>

            <Button
                style="@style/style_lamp_setting_button"
                android:drawableTop="@drawable/bt_lamp_setting_deviceinfo_selector"
                android:text="remount"
                android:visibility="invisible"/>

            <Button
                style="@style/style_lamp_setting_button"
                android:drawableTop="@drawable/bt_lamp_setting_deviceinfo_selector"
                android:text="remount"
                android:visibility="invisible"/>

            <Button
                style="@style/style_lamp_setting_button"
                android:drawableTop="@drawable/bt_lamp_setting_deviceinfo_selector"
                android:text="remount"
                android:visibility="invisible"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>
