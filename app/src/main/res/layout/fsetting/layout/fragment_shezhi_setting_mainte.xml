<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingTop="10dp"
    android:paddingRight="30dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:background="#ffffff">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61px"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="50px">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="K校准范围:"
            android:textColor="#ff000000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_k_jiaozhun"
            android:layout_width="197px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:gravity="center"
            android:ems="10"
            android:hint="0.2"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:background="@drawable/et_lamp_edittext_yuan_selector"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="10pt"
            android:textColor="@color/rb_lamp_button_text_color"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt_jiaozhun_save"
            android:layout_width="155px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bt_lamp_button_selector"
            android:textColor="@color/rb_lamp_button_text_color"
            android:text="保存"
            android:textSize="10pt"/>

    </LinearLayout>
</LinearLayout>
