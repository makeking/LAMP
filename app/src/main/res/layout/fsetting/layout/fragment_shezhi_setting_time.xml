<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="10dp"
    android:paddingRight="30dp"
    android:paddingBottom="10dp"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/lamp_setting_fragment_label" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50px"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="时间日期"
            android:textColor="#4d4d4d"
            android:textSize="8pt" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61px"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:layout_gravity="center">
        <TextView
            android:layout_width="100px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="日期:"
            android:textColor="#4d4d4d"
            android:textSize="10pt" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:singleLine="true" />
        <Button
            android:id="@+id/bt_date_edit"
            android:layout_width="41px"
            android:layout_height="36px"
            android:layout_gravity="center"
            android:background="@drawable/bt_lamp_setting_edit_selector"/>

        <Space
            android:layout_width="250px"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="同步网络时间:"
            android:textColor="#4d4d4d"
            android:textSize="10pt"/>

        <Switch
            android:id="@+id/sw_netenable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:showText="true"
            android:switchTextAppearance="@style/SwitchTheme"
            android:textOff="关"
            android:textOn="开"
            android:textSize="12pt"
            android:thumb="@drawable/lamp_switch_thumb_selector"
            android:track="@drawable/lamp_switch_track_selector" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61px"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:layout_gravity="center">
        <TextView
            android:layout_width="100px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="时间:"
            android:textColor="#4d4d4d"
            android:textSize="10pt" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:singleLine="true" />
        <Button
            android:id="@+id/bt_time_edit"
            android:layout_width="41px"
            android:layout_height="36px"
            android:layout_gravity="center"
            android:background="@drawable/bt_lamp_setting_edit_selector"/>

        <Space
            android:layout_width="250px"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>
