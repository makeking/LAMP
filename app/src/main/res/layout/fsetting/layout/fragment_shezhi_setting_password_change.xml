<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="10dp"
    android:paddingRight="30dp"
    android:paddingBottom="10dp"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/lamp_setting_fragment_label" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50px"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="密码修改"
            android:textColor="#4d4d4d"
            android:textSize="8pt" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50px"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_mima"
            android:layout_width="475px"
            android:layout_height="57px"
            android:background="@drawable/lamp_setting_deviceno_et_background"
            android:ems="10"
            android:hint="请输入密码！"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPassword"
            android:password="true"
            android:paddingLeft="250px"
            android:singleLine="true" />

        <TextView
            android:layout_width="150px"
            android:layout_height="57px"
            android:layout_alignLeft="@id/et_mima"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/gothrought"
            android:ellipsize="marquee"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="新密码"
            android:textColor="#086197"
            android:textSize="8pt" />
    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_mima2"
            android:layout_width="475px"
            android:layout_height="57px"
            android:background="@drawable/lamp_setting_deviceno_et_background"
            android:ems="10"
            android:hint="请再输入密码！"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPassword"
            android:password="true"
            android:paddingLeft="250px"
            android:singleLine="true" />

        <TextView
            android:layout_width="150px"
            android:layout_height="57px"
            android:layout_alignLeft="@id/et_mima2"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/gothrought"
            android:ellipsize="marquee"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="确认密码"
            android:textColor="#086197"
            android:textSize="8pt" />
    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50px"/>
    <Button
        android:id="@+id/bt_ok"
        android:layout_width="155px"
        android:layout_height="61px"
        android:layout_gravity="center"
        android:background="@drawable/bt_lamp_button_selector"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/rb_lamp_button_text_color"
        android:textSize="10pt" />
</LinearLayout>
