<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="保存路径"
            android:textColor="#000"
            android:textSize="24px" />

        <EditText
            android:id="@+id/et_value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/edit_text"
            android:ems="10"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:inputType="numberDecimal"
            android:paddingBottom="15dp"
            android:singleLine="true" />

        <Button
            android:id="@+id/bt_peizhi_open_file"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="..." />
        <!--android:onClick="goButtonSelectFileHandle"-->
        <Button
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_mc100_operationtip_ok_selector"
            android:text="保存" />
        <Button
            android:id="@+id/bt_okxml"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_mc100_operationtip_ok_selector"
            android:text="保存xml" />

        <!--android:onClick="goButtonOkHandle"-->
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/img_createqr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"/>

    <Button
        android:id="@+id/bt_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="打印" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
</LinearLayout>