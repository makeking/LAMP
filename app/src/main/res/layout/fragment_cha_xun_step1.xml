<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25px"
        android:orientation="horizontal">

        <!--<Space-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="0.5" />-->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:layout_width="110px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10px"
                android:gravity="center"
                android:text="日 期 查 询 :"
                android:textSize="8pt"
                android:textColor="#4D4D4D"/>

            <EditText
                android:id="@+id/et_chaxun_time"
                android:layout_width="363px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="120px"
                android:background="@drawable/lamp_chaxun1_editview"
                android:ems="10"
                android:gravity="center"
                android:paddingRight="155px"
                android:imeOptions="flagNoExtractUi"
                android:inputType="datetime"
                android:singleLine="true"
                android:text="2014-01-01"
                android:textSize="10pt"
                android:textColor="#4D4D4D"/>

            <Button
                android:id="@+id/bt_chaxun_step1_chaxun1"
                android:layout_width="155px"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/et_chaxun_time"
                android:layout_marginRight="-5px"
                android:background="@drawable/bt_lamp_button_selector"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="查询"
                android:textSize="10pt"
                android:textColor="@color/bt_lamp_button_text_color"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="样本编号"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/et_chaxun_sampleno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/edit_text"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:imeOptions="flagNoExtractUi"
                android:inputType="text|textPersonName"
                android:singleLine="true"
                android:text=""
                android:hint="请输入样本编号"
                android:textSize="12sp"/>
            <Button
                android:id="@+id/bt_chaxun_step1_chaxun2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="查询"
                android:textSize="12sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="3">

            <TextView
                android:layout_width="110px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10px"
                android:gravity="center"
                android:text="实 验 文 件:"
                android:textSize="8pt"
                android:textColor="#4D4D4D"/>

            <EditText
                android:id="@+id/et_chaxun_file"
                android:layout_width="363px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="120px"
                android:background="@drawable/lamp_chaxun1_editview"
                android:ems="10"
                android:gravity="center"
                android:paddingRight="155px"
                android:paddingLeft="20px"
                android:imeOptions="flagNoExtractUi"
                android:inputType="text|textPersonName"
                android:singleLine="true"
                android:text="/sdcard/LAMP/data/"
                android:hint="请选择文件名"
                android:textSize="10pt"
                android:textColor="#4D4D4D"/>
            <Button
                android:id="@+id/bt_chaxun_step1_chaxun3"
                android:layout_width="155px"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/et_chaxun_file"
                android:layout_marginRight="-5px"
                android:background="@drawable/bt_lamp_button_selector"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="查询"
                android:textSize="10pt"
                android:textColor="@color/bt_lamp_button_text_color"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="940px"
        android:layout_height="375px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110px"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54px"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="187"
                android:background="@drawable/lamp_chaxun1_title1"
                android:gravity="center"
                android:text="序号"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="752"
                android:layout_height="match_parent"
                android:background="@drawable/lamp_chaxun1_title2"
                android:gravity="center"
                android:text="样本编号"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_serialno"
                android:layout_width="0dp"
                android:layout_weight="752"
                android:layout_height="match_parent"
                android:background="@drawable/lamp_chaxun1_title2"
                android:gravity="center"
                android:text="检测时间"
                />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_chaxun_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
</RelativeLayout>
