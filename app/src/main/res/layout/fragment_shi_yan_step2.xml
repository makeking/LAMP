<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_shiyan_step2_projectname"
        android:layout_width="212px"
        android:layout_height="65px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="22px"
        android:layout_marginLeft="60px"
        android:background="@drawable/lamp_check2_projectname_background"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="项目名称"
        android:textSize="12pt"
        android:textColor="#FFFFFF"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shiyan_step2_kong"
        android:layout_width="700px"
        android:layout_height="75px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="280px"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shiyan_step2_guang"
        android:layout_width="146px"
        android:layout_height="220px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="93px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120px"
        android:layout_gravity="center"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="750px"
        android:layout_height="250px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="240px">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_shiyan_step2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="50px"/>
        <TextView
            android:layout_width="50px"
            android:layout_height="31dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="归一化"
            android:textColor="#4D4D4D"
            android:textSize="6pt" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="时间"
            android:textSize="6pt"
            android:textColor="#4D4D4D"/>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="停止"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_shiyan_step2_fenxi"
        android:layout_width="155px"
        android:layout_height="61px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginRight="89dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/bt_lamp_button_selector"
        android:gravity="center"
        android:text="停止"
        android:textColor="@color/bt_lamp_button_text_color"
        android:textSize="10pt" />

</RelativeLayout>
